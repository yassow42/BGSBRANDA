<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tumLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_item_siparis">


    <TextView
        android:id="@+id/tvMusteriAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxWidth="165dp"
        android:text="Musteri Adi"
        android:textColor="@color/beyaz"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUretenAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxWidth="75dp"
        android:textColor="@color/beyaz"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvNot"
        app:layout_constraintEnd_toStartOf="@+id/tvNot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNot" />

    <TextView
        android:id="@+id/tvSiparisTuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tente"
        android:textColor="@color/beyaz"
        android:textSize="18sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvMusteriAdi"
        app:layout_constraintStart_toStartOf="@+id/tvMusteriAdi"
        app:layout_constraintTop_toBottomOf="@+id/tvMusteriAdi" />

    <TextView
        android:id="@+id/tvMusteriTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Tel"
        android:textColor="@color/beyaz"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvMusteriAdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvMusteriAdi"
        app:layout_constraintTop_toTopOf="@+id/tvMusteriAdi" />

    <TextView
        android:id="@+id/tvUretenZamani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/beyaz"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvNot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvNot"
        app:layout_constraintTop_toTopOf="@+id/tvNot" />

    <TextView
        android:id="@+id/tvNot"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/beyaz"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/tvEksik"
        app:layout_constraintEnd_toEndOf="@+id/tvSiparisTuru"
        app:layout_constraintStart_toStartOf="@+id/tvSiparisTuru"
        app:layout_constraintTop_toBottomOf="@+id/tvSiparisTuru" />

    <TextView
        android:id="@+id/tvEksik"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Eksikler"
        android:textColor="@color/kirmizi"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvNot"
        app:layout_constraintStart_toStartOf="@+id/tvNot" />
</androidx.constraintlayout.widget.ConstraintLayout>